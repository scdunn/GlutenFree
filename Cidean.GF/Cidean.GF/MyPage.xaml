<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cidean.GF.MyPage">
  
            <StackLayout>
              <Button Text="{Binding ClickCountFormatted}"
                    Command="{Binding IncrementCommand}"
                    VerticalOptions="Center" />

              <ListView x:Name="EmployeeView" ItemsSource="{Binding Locations}">
                <ListView.ItemTemplate>
                  <DataTemplate>
                    <TextCell Text="{Binding Name}" Command="{Binding Locator.MainViewModel.ItemClicked}" />
                  </DataTemplate>
                </ListView.ItemTemplate>
              </ListView>
            
              <Button Text="Add New" Command="{Binding AddLocation}"/>

            </StackLayout>
</ContentPage>